# Используйте базовый образ с Node.js
FROM node:22.2.0

# Установите рабочую директорию внутри контейнера
WORKDIR /app

# Скопируйте файлы конфигурации зависимостей
COPY package*.json ./

# Установите зависимости приложения
RUN npm install

# Скопируйте остальную часть вашего приложения
COPY . .

# Укажите команду для запуска вашего приложения
CMD ["npm", "start"]

# Откройте порт, на котором ваше приложение будет слушать
EXPOSE 3000
